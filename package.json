{
  "name": "wow-nexus",
  "version": "1.1.0",
  "private": true,
  "main": "index.js",
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/api/*",
    "apps/api/services/*",
    "apps/web/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run start:dev",
    "test": "turbo run test",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "prepare": "husky",
    "prisma:generate": "turbo run prisma:generate",
    "prisma:migrate": "turbo run prisma:migrate",
    "prisma:studio": "turbo run prisma:studio",
    "db:setup": "turbo run db:setup",
    "postinstall": "turbo run prisma:generate",
    "docker:dev:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:prod:up": "docker-compose up -d",
    "docker:prod:down": "docker-compose down",
    "docker:prod:build": "docker-compose up --build -d",
    "dev:local": "npm run docker:dev:up && npm run db:setup && npm run dev",
    "dev:docker": "npm run docker:prod:build"
  },
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,scss,css,md,yml}": "prettier --write"
  },
  "keywords": [
    "warcraft",
    "wow",
    "nexus",
    "nestjs",
    "nextjs"
  ],
  "contributors": [
    {
      "name": "Alexander Dolzhenko",
      "url": "https://github.com/alraskalov"
    },
    {
      "name": "Sergey Kuzovkin",
      "url": "https://github.com/Dragokas-afk"
    }
  ],
  "description": "World of Warcraft projects",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
